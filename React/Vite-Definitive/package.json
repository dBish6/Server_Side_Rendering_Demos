{
  "name": "server_side_rendering_demos",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "author": "David Bishop",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dBish6/Server_Side_Rendering_Demos"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.5.0"
  },
  "workspaces": [
    "./front-end",
    "./back-end"
  ],
  "scripts": {
    "dev:front": "npm run dev --workspace front",
    "dev:back": "npm run dev --workspace back",

    "build": "npm run build:front && npm run build:back",
    "build:front": "npm run build --workspace front",
    "build:back": "npm run build --workspace back",
    "serve": "dotenv -e .env.production node build/server.mjs",

    "lint": "npm run lint:front && npm run lint:back",
    "lint:front": "npm run lint --workspace front",
    "lint:back": "npm run lint --workspace back",
    "clean": "npm run clean --workspaces && rm -rf node_modules"
  },
  "dependencies": {
    "dotenv-cli": "^7.4.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.29.0"
  },
  "devDependencies": {
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "eslint": "^8.56.0",
    "tsx": "^4.20.0",
    "vite": "6.3.5",
    "vite-tsconfig-paths": "^5.0.0"
  }
}
