{
  "exclude": ["node_modules", "build"],
  "include": ["./**/*.ts*"],
  "compilerOptions": {
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "target": "ES2020",
    "noEmit": true,
    "jsx": "react-jsx",

    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,

    "strict": true
  }
}
